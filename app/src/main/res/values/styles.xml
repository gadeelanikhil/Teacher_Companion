<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#009688</item>
        <item name="colorPrimaryDark">#00695C</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="tc_theme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">?attr/colorControlActivated</item>
        <item name="android:colorForeground">@android:color/background_light</item>
    </style>

    <style name="tc_theme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="tc_theme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
