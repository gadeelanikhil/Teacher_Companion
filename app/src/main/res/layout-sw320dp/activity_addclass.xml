<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0E0E0"
    tools:context="teratroopers.teachercompanion.addclass">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar3"
        android:layout_width="0dp"
        android:layout_height="320dp"
        android:layout_marginBottom="8dp"
        android:background="?android:attr/colorPrimaryDark"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintBottom_toTopOf="@+id/cardView5"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.31"
        app:titleMargin="@dimen/cardview_default_elevation"
        app:titleTextColor="@color/cardview_light_background"
        tools:ignore="NewApi"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <ImageView
        android:id="@+id/addimg"
        android:layout_width="77dp"
        android:layout_height="68dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.241"
        app:srcCompat="@drawable/add"
        app:layout_constraintHorizontal_bias="0.501" />

    <android.support.v7.widget.CardView
        android:id="@+id/cardView5"
        android:layout_width="351dp"
        android:layout_height="261dp"
        android:elevation="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintTop_creator="1">

        <EditText
            android:id="@+id/name"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="35dp"
            android:backgroundTint="@color/colorAccent"
            android:ems="10"
            android:hint=" Enter Classname"
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/sr"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="110dp"
            android:backgroundTint="@color/colorAccent"
            android:ems="10"
            android:hint="Start  No"
            android:inputType="number"
            android:textAlignment="center"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/er"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="194dp"
            android:layout_marginTop="110dp"
            android:backgroundTint="@color/colorAccent"
            android:ems="10"
            android:hint="End No"
            android:inputType="number"
            android:textAlignment="center"
            android:textSize="16sp" />

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:text=" Add Your Class "
        android:textAlignment="center"
        android:textColor="@color/cardview_light_background"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintRight_toLeftOf="@+id/toolbar3"
        app:layout_constraintLeft_toRightOf="@+id/toolbar3"
        app:layout_constraintHorizontal_bias="0.499"
        app:layout_constraintBottom_toTopOf="@+id/cardView5"
        app:layout_constraintTop_toBottomOf="@+id/addimg"
        app:layout_constraintVertical_bias="0.333" />

    <com.spark.submitbutton.SubmitButton
        android:id="@+id/sub"
        android:layout_width="201dp"
        android:layout_height="117dp"
        android:elevation="5dp"
        android:text="Add"
        android:textColor="@color/gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:sub_btn_background="@color/white"
        app:sub_btn_duration="1000"
        app:sub_btn_line_color="#1abc9c"
        app:sub_btn_ripple_color="#1abc9c"
        app:sub_btn_tick_color="@color/white" />

    <Button
        android:id="@+id/backbutton"
        android:layout_width="32dp"
        android:layout_height="33dp"
        android:layout_marginStart="12dp"
        android:background="@android:drawable/ic_menu_sort_by_size"
        android:elevation="3dp"
        app:layout_constraintBottom_toTopOf="@+id/toolbar3"
        app:layout_constraintHorizontal_bias="0.877"
        app:layout_constraintLeft_toRightOf="@+id/toolbar3"
        app:layout_constraintRight_toLeftOf="@+id/toolbar3"
        app:layout_constraintTop_toBottomOf="@+id/toolbar3"
        app:layout_constraintVertical_bias="0.861" />

</android.support.constraint.ConstraintLayout>
